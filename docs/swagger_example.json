{
  "openapi": "3.0.0",
  "info": {
    "title": "E-Commerce API",
    "version": "1.0.0"
  },
  "paths": {
    "/login": {
      "post": {
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Successful login" },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/checkout": {
      "post": {
        "summary": "Checkout order",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "cartId": { "type": "string" },
                  "paymentMethod": { "type": "string" }
                },
                "required": ["cartId", "paymentMethod"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Order confirmed" },
          "400": { "description": "Invalid input" }
        }
      }
    }
  }
}
